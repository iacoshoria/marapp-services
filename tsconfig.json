{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "ES2019.Array"
    ],
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "loaders.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
